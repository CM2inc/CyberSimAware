@model Nft
@{
    ViewBag.Title = "Nft Details";
}

<h1>NFT Details</h1>
<div class="row">
    <div class="col-sm-4">
        <img src="~/images/@ViewBag.ImageFilename" 
             alt="@Model.Name Image" 
             class="img-responsive center-block"/>
    </div>

    <div class="col-sm-8">
        <h2>@Model.Name</h2>
        <table class="table table-bordered table-striped">
            <tr>
                <td>Price of NFT:</td>
                <td>@Model.Price.ToString("C")</td>
            </tr>
        </table>
        
    </div>
</div>